<div class="container"> 
  <div class="row">
    <div class="col-sm">
      <strong>List of book requested by you </strong>
      <ul>
        <% current_user.book_requests.each do |book| %>
          <% if book.status == 'pending' %>
            <li><%= link_to book.title %></li>
          <% end %>
        <% end %>
      </ul>
    </div><br>
    <div class="col-sm">
      <strong>List of book approved! </strong>
      <ul>
        <% current_user.book_requests.each do |book| %>
          <% if book.status == 'approved' %>
            <li><%= link_to book.title %></li>
          <% end %>    
        <% end %>
      </ul>
    </div><br>
  </div>
</div>