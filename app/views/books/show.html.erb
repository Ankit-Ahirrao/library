<div class="container">
  <h2><strong>Book Details</strong></h2>
  <p><strong>Title:</strong><%= @book.title %><p>
  <p><strong>Author:</strong> <%= @book.author %></p>
  <p><strong>Description:</strong> <%= @book.description %></p>

  <% if admin? %>
    <%= link_to "Edit book", edit_book_path(@book), class: "btn-sm btn-primary" %>
    <%= link_to "Delete book", book_path(@book), method: :delete, class: "btn-sm btn-primary" %>
  <% else %>
    <% value, path = show_book_status_on_button(@book) %>
    <%= link_to value, path, class: "btn-sm btn-primary" %>
  <% end %>
  
  <%= link_to "Back", books_path, class: "btn-sm btn-primary" %>
</div>