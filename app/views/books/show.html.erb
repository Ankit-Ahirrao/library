<div class="container">
  <h2><strong>Book Details</strong></h2>
  <p><strong>Title:</strong><%= @book.title %><p>
  <p><strong>Author:</strong> <%= @book.author %></p>
  <p><strong>Description:</strong> <%= @book.description %></p>

  <% if admin? %>
    <%= link_to "Edit book", edit_book_path(@book), class: "btn-primary" %> | 
    <%= link_to "Delete book", book_path(@book), method: :delete, class: "btn-primary" %>
  <% else %>
    <%#if !@book.issue_request && @book.status=="rejected" %>
      <%= link_to "Request", issue_book_path(@book), class: "btn-primary" %> |
    <%#elsif @book.issue_request && @book.status=="pending"%>
      <%= link_to "Cancel",cancel_book_path(@book), class: "btn-primary" %>
    <%#elsif @book.issue_request && @book.status=="approved" %>
      <%#link_to "Approved", "#", class: "btn-primary" %>
    <%#elsif @book.issue_request && @book.status=="rejected" %>
      <%#link_to "Rejected", "#", class: "btn-primary" %>
    <%#end %>
  <% end %>
  
  <%= link_to "Back", books_path, class: "btn-primary" %>
</div>