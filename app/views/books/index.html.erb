<div class="container">
  <h2><strong>Book Lists</strong></h2><br>
  <% if @books.any? %>
    <%= will_paginate %>
    <ul> 
      <% @books.each do |book| %>
        <% if admin? %>
          <li><%= link_to book.title, book_url(book) %></li><br>
        <% else %>
          <% if book.not_issued? %>
            <li><%= link_to book.title, book_url(book) %></li><br>
          <% end %>
        <% end %>
      <% end %>
    </ul>
    <%= will_paginate %>
  <% else %>
    Books not available. Please add some books.
  <% end %>
</div>